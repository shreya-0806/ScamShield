<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <queries>
        <intent>
            <action android:name="android.intent.action.RECOGNIZE_SPEECH" />
        </intent>
    </queries>

    <application
        android:name="com.shreyanshi.scamshield.ScamApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ScamShield"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScamShield">

        <activity
            android:name="com.shreyanshi.scamshield.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="android.intent.action.DIAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.DIAL" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="tel" />
            </intent-filter>
        </activity>

        <activity android:name="com.shreyanshi.scamshield.activities.ScamNewsActivity" android:exported="false" />
        <activity android:name="com.shreyanshi.scamshield.activities.SettingsActivity" android:exported="false" />
        <activity android:name="com.shreyanshi.scamshield.activities.ScamHistoryActivity" android:exported="false" />
        <activity android:name="com.shreyanshi.scamshield.activities.PostCallActivity" android:exported="false" android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity android:name="com.shreyanshi.scamshield.activities.ScamAlertActivity" android:exported="false" />

        <service android:name="com.shreyanshi.scamshield.services.ScamOverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Displaying real-time scam alerts during phone calls" />
        </service>

        <service android:name="com.shreyanshi.scamshield.services.LiveDetectionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <receiver android:name="com.shreyanshi.scamshield.services.CallReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

    </application>
</manifest>