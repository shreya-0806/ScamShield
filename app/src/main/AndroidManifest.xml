<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shreyanshi.scamshield">

    <!-- Declare telephony as optional so app can be installed on devices without telephony -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <!-- Permissions for Dialer and Contacts -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <!-- Permissions for Scam Detection (STT) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Permissions for UI Alerts and Overlays -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Foreground microphone permission is restricted; do not declare it. We avoid declaring it to prevent SecurityException on devices. -->

    <application
        android:name="com.shreyanshi.scamshield.ScamApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ScamShield"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScamShield">

        <activity
            android:name="com.shreyanshi.scamshield.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.shreyanshi.scamshield.activities.ScamNewsActivity"
            android:exported="false"
            android:label="Scam News" />
        
        <activity
            android:name="com.shreyanshi.scamshield.activities.SettingsActivity"
            android:exported="false"
            android:label="Settings" />
        
        <activity
            android:name="com.shreyanshi.scamshield.activities.ScamHistoryActivity"
            android:exported="false"
            android:label="Scam History" />

        <activity
            android:name="com.shreyanshi.scamshield.activities.PostCallActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="Call Analysis" />

        <activity
            android:name="com.shreyanshi.scamshield.activities.ScamAlertActivity"
            android:exported="false"
            android:label="Scam Alert" />

        <service android:name="com.shreyanshi.scamshield.services.ScamOverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="connectedDevice" />

        <service android:name="com.shreyanshi.scamshield.services.LiveDetectionService"
            android:enabled="true"
            android:exported="false" />

        <receiver android:name="com.shreyanshi.scamshield.services.CallReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

    </application>
</manifest>