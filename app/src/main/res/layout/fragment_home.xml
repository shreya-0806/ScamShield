<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Permission warning banner -->
    <TextView
        android:id="@+id/homePermissionWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF3F3"
        android:textColor="#B00020"
        android:padding="10dp"
        android:text="Microphone permission is required for scam detection. Open Settings to grant."
        android:visibility="gone" />

    <!-- Number Display Area -->
    <LinearLayout
        android:id="@+id/displayArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homePermissionWarning"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Dial a number"
            android:textColorHint="#555555"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:singleLine="true"
            android:ellipsize="start"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Dialer Grid -->
    <GridLayout
        android:id="@+id/dialerGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/actionArea"
        android:layout_marginBottom="24dp"
        android:columnCount="3"
        android:alignmentMode="alignMargins">

        <Button style="@style/DialButton" android:text="1" android:id="@+id/btn1"/>
        <Button style="@style/DialButton" android:text="2" android:id="@+id/btn2"/>
        <Button style="@style/DialButton" android:text="3" android:id="@+id/btn3"/>

        <Button style="@style/DialButton" android:text="4" android:id="@+id/btn4"/>
        <Button style="@style/DialButton" android:text="5" android:id="@+id/btn5"/>
        <Button style="@style/DialButton" android:text="6" android:id="@+id/btn6"/>

        <Button style="@style/DialButton" android:text="7" android:id="@+id/btn7"/>
        <Button style="@style/DialButton" android:text="8" android:id="@+id/btn8"/>
        <Button style="@style/DialButton" android:text="9" android:id="@+id/btn9"/>

        <Button style="@style/DialButton" android:text="*" android:id="@+id/btnStar"/>
        <Button style="@style/DialButton" android:text="0" android:id="@+id/btn0"/>
        <Button style="@style/DialButton" android:text="#" android:id="@+id/btnHash"/>
    </GridLayout>

    <!-- Call and Backspace Area -->
    <LinearLayout
        android:id="@+id/actionArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            app:backgroundTint="#4CAF50"
            app:fabSize="normal"
            android:contentDescription="Call"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnBackspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@android:drawable/ic_input_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#888888"
            android:padding="16dp"
            android:contentDescription="Backspace" />

    </LinearLayout>

</RelativeLayout>
